<%- include('../partials/header') %>

<table>
  <thead>
    <tr>
      <th>Title:</th>
      <th>Description:</th>
      <th>Ingredients:</th>
      <th>Ingredients:</th>
      <th>Ingredients:</th>
      <th>Ingredients:</th>
      <th>Ingredients:</th>
      <th>Preparation:</th>
    </tr>
  </thead>

  <tbody>
    <% cocktails.forEach(function(c) { %>
    <tr>
      <td><%= c.title %></td>
      <td><%= c.description %></td>
      <td><%= c.ingredient1 %></td>
      <td><%= c.ingredient2 %></td>
      <td><%= c.ingredient3 %></td>
      <td><%= c.ingredient4 %></td>
      <td><%= c.ingredient5 %></td>
      <td><%= c.preparation %></td>
      <td>
        <a id="btn-cocktails-id" href="/cocktails/<%= c._id %>">DETAILS</a>
      </td>
      <td>
        <a id="btn-cocktails-id" href="/cocktails/<%= c._id %>/edit">EDIT</a>
      </td>
      <td>
        <form action="cocktails/<%= c._id %>?_method=DELETE" method="POST">
          <button id="btn-cocktails" class="del-button hoverable">
            DELETE
          </button>
        </form>
      </td>
    </tr>

    <% }); %>
  </tbody>
</table>
<%- include('../partials/footer') %>
