<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>List of cocktails</title>
</head>

<body>
    <a href="/cocktails/new">New Cocktail</a>
    <h1>Cocktail List</h1>

    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Ingredients#1</th>
                <th>Ingredients#2</th>
                <th>Ingredients#3</th>
                <th>Ingredients#4</th>
                <th>Ingredients#5</th>
                <th>Preparation</th>
            </tr>
        </thead>
        <tbody>
            <% cocktails.forEach(function(c) { %>
            <tr>
                <td><%= c.title %></td>
                <td><%= c.description %></td>
                <td><%= c.ingredient1 %></td>
                <td><%= c.ingredient2 %></td>
                <td><%= c.ingredient3 %></td>
                <td><%= c.ingredient4 %></td>
                <td><%= c.ingredient5 %></td>
                <td><%= c.preparation %></td>
                <td><a href="/cocktails/<%= c._id %>">DETAILS</a></td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</body>

</html>